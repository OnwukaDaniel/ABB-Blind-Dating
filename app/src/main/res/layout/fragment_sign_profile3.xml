<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/profile3_root"
    android:clickable="true"
    android:background="?background"
    android:focusable="true"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:id="@+id/scrollView2"
            android:layout_width="match_parent"
            android:scrollbars="none"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:id="@+id/profile3_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginHorizontal="16dp"
                    app:cardCornerRadius="8dp"
                    app:cardBackgroundColor="@color/white"
                    android:layout_gravity="start"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_arrow"
                        android:padding="8dp"
                        app:tint="?iconTint"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginHorizontal="16dp"
                    android:gravity="start"
                    android:textStyle="bold"
                    android:textColor="@color/app_dark1"
                    android:layout_gravity="start"
                    android:text="@string/let_s_set_up_your_profile"
                    android:textSize="22sp"  />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="22dp"
                    android:layout_marginVertical="12dp"
                    app:cardElevation="0dp"
                    android:layout_marginBottom="4dp"
                    app:cardCornerRadius="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="18dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="start"
                            android:text="@string/what_are_you_looking_for_in_this_app" />

                        <HorizontalScrollView
                            android:layout_width="match_parent"
                            android:scrollbars="none"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_marginTop="16dp"
                                android:orientation="horizontal"
                                android:weightSum="3"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/profile3_friendship"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/friendship"
                                    android:textSize="12sp"
                                    android:paddingVertical="12dp"
                                    android:paddingHorizontal="12dp"
                                    android:layout_marginEnd="8dp"
                                    android:background="@drawable/rounded_unselected"
                                    android:gravity="center"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintStart_toEndOf="@+id/checkBox"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <TextView
                                    android:id="@+id/profile3_date"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/date"
                                    android:textSize="12sp"
                                    android:paddingHorizontal="16dp"
                                    android:layout_marginHorizontal="8dp"
                                    android:paddingVertical="12dp"
                                    android:background="@drawable/rounded_unselected"
                                    android:gravity="center"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintStart_toEndOf="@+id/checkBox"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <TextView
                                    android:id="@+id/profile3_serious"
                                    android:layout_width="wrap_content"
                                    android:paddingHorizontal="12dp"
                                    android:layout_height="wrap_content"
                                    android:text="@string/serious_relationship"
                                    android:textSize="12sp"
                                    android:paddingVertical="12dp"
                                    android:layout_marginStart="8dp"
                                    android:background="@drawable/rounded_unselected"
                                    android:gravity="center"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintStart_toEndOf="@+id/checkBox"
                                    app:layout_constraintTop_toTopOf="parent" />

                            </LinearLayout>

                        </HorizontalScrollView>

                        <HorizontalScrollView
                            android:layout_width="match_parent"
                            android:scrollbars="none"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_marginTop="16dp"
                                android:orientation="horizontal"
                                android:weightSum="3"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/profile3_marriage"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/marriage"
                                    android:paddingHorizontal="12dp"
                                    android:textSize="12sp"
                                    android:paddingVertical="12dp"
                                    android:layout_marginEnd="8dp"
                                    android:background="@drawable/rounded_unselected"
                                    android:gravity="center"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintStart_toEndOf="@+id/checkBox"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <TextView
                                    android:id="@+id/profile3_conversation"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/conversation"
                                    android:textSize="12sp"
                                    android:layout_marginHorizontal="12dp"
                                    android:paddingHorizontal="12dp"
                                    android:paddingVertical="12dp"
                                    android:background="@drawable/rounded_unselected"
                                    android:gravity="center"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintStart_toEndOf="@+id/checkBox"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <TextView
                                    android:id="@+id/profile3_long_term"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/long_term"
                                    android:textSize="12sp"
                                    android:layout_marginStart="8dp"
                                    android:paddingHorizontal="12dp"
                                    android:paddingVertical="12dp"
                                    android:background="@drawable/rounded_unselected"
                                    android:gravity="center"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintStart_toEndOf="@+id/checkBox"
                                    app:layout_constraintTop_toTopOf="parent" />


                            </LinearLayout>

                        </HorizontalScrollView>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="22dp"
                    android:layout_marginVertical="12dp"
                    android:layout_marginBottom="4dp"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="18dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="start"
                            android:text="@string/tell_us_about_yourself" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_marginTop="16dp"
                            android:orientation="horizontal"
                            android:layout_height="wrap_content">

                            <EditText
                                android:id="@+id/profile3_about"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/enter_here"
                                android:textSize="16sp"
                                android:textColor="?android:textColorSecondary"
                                android:padding="12dp"
                                android:lines="6"
                                android:background="@drawable/rounded_unselected"
                                android:gravity="start|top"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toEndOf="@+id/checkBox"
                                app:layout_constraintTop_toTopOf="parent" />

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/profile3_continue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    app:cardMaxElevation="10dp"
                    android:layout_marginHorizontal="22dp"
                    android:layout_marginVertical="12dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="?iconTint"
                    android:layout_gravity="center|center_vertical"
                    app:cardCornerRadius="14dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginVertical="12dp"
                        android:text="@string/next"/>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>