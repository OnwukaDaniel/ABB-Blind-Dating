<resources>
    <!-- Base application theme. -->
    <style name="Theme.AbbBlindDate" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/app_accent</item>
        <item name="colorPrimaryVariant">@color/app_dark1</item>
        <item name="colorOnPrimary">@color/app_background</item>
        <item name="android:windowBackground">@color/app_background</item>
        <item name="background">@color/app_background</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/app_dark1</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/grey50</item>
        <item name="android:textColor">@color/app_dark1</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="android:textColorSecondary">@color/black</item>
        <item name="iconTint">@color/app_accent</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/app_background</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.AbbBlindDateSplash" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="background">@color/app_background</item>
        <item name="android:windowBackground">@drawable/splash_logo</item>
        <!-- Secondary brand color. -->
        <item name="iconTint">@color/app_accent</item>
        <item name="android:statusBarColor">@color/app_background</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="CircleImage" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
</resources>